%h1 Listing news

%table
  %thead
    %tr
      %th News date
      %th Tweet id
      %th News body
      %th Image
      %th
      %th

  %tbody
    - @news.each do |news|
      %tr
        %td= news.news_date
        %td= news.tweet_id
        %td= news.news_body
        %td= image_tag(news.image.url(:thumb))

        %td= link_to 'Show', news
        %td= link_to 'Edit', edit_news_path(news)
        %td= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New News', new_news_path
